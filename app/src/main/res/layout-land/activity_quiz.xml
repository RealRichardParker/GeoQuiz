<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    andriod:layout_gravity="center"
    andriod:orientation="vertical">

    <!--<TextView
        andriod:id="@+id/instuctions"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center_horizontal"
        andriod:text="@string/instructions"/>-->

    <TextView
        andriod:id="@+id/questions_text_view"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center_horizontal"
        andriod:padding="24dp" />

    <LinearLayout
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:layout_gravity="center_vertical|center_horizontal"
        andriod:orientation="horizontal" >

        <Button
            andriod:id="@+id/true_button"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="@string/true_button" />

        <Button
            andriod:id="@+id/false_button"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:text="@string/false_button" />
    </LinearLayout>

    <Button
        andriod:id="@+id/cheat_button"
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:text="@string/cheat_button"
        andriod:layout_gravity="bottom|right"/>

    <LinearLayout
        andriod:layout_width="wrap_content"
        andriod:layout_height="wrap_content"
        andriod:orientation="horizontal"
        andriod:layout_gravity="bottom|center">

        <ImageButton
            andriod:id="@+id/previous_button"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:src="@drawable/arrow_left" />
        <ImageButton
            andriod:id="@+id/next_button"
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:src="@drawable/arrow_right" />

    </LinearLayout>

</FrameLayout>
